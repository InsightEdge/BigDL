# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

# Home page
GET         /                                     controllers.WebEndpoint.index

#TODO params
GET         /callSession/:streamedRowId           controllers.CallsEndpoint.getLastCallSessions(streamedRowId: String)
GET         /inProcessCalls                       controllers.CallsEndpoint.getInprocessCalls()
GET         /modelStats                           controllers.CallsEndpoint.getModelStatistic()

POST        /speech                               controllers.KafkaEndpoint.submitSpeech

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                         controllers.Assets.at(path="/public", file)